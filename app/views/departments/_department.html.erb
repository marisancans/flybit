<% index = department_counter + 1 %>
<div class="col-lg-3 col-md-4 col-xs-12 thumb">
  <div class="thumbnail">
  	<%= link_to categories_path(selected: "#{index}") do %>
	    <%= cl_image_tag "#{@images[department_counter]}", :width => 250, :height => 250, :background => "white", :crop=>"pad" %>
	    <div class="text-under-thumbnail">
	    	<h4><%= department.name %></h4>
	    </div>
	  <% end %>
  </div>
</div>