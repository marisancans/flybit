$(document).ready(function(){
	var sum = 0;
	$('#qty-n-price-row-<%= @index %>').html("<%= escape_javascript render(:partial => 'shared/line_items/qty_n_price_row', :locals => { index: @index, item: @item } ) %>");
	$('#litp-id-<% @index %>').text("€")
	$('[id^="litp-id-"]').each(function() {
	   sum += parseFloat($(this).text().slice(3));
	});
	sum_total = sum.toFixed(2);
	$('#line-items-total-sum').text("€" + sum_total).effect( "highlight", {color: 'lightblue'}, 250 );
	$('#litp-id-<%= @index %>').effect( "highlight", {color: 'lightblue'}, 250 );
});