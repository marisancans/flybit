<%= stylesheet_link_tag "navbar", "footer" %>

<div class="row">
  <div class="center-block" style="width:50%">
  	<%= will_paginate if !@products.blank? %>
  </div>
</div>

<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-10">
		<% if @products.blank? %>
		  <h4>There are no products containing the term "<%= params[:search] %>"</h4>
		  <div style="width: 10%">
		  	<%= link_to "Browse shop", departments_path, class: "btn btn-primary btn-sm btn-block" %>
		  </div>
		<% else %>
			<h4>Found <%= @products.count %> products from <%= @categories.count %> categories</h4>
	  	<% @categories.each do |category| %>
		  	<div class="row text-center">
		  		<h3><%= link_to category.name, products_path(selected: "#{category.id}") %></h3>
		  	</div>
		  	<div class="row">
		  		<%= render @products.where("category_id = ?", category.id) %>
		  	</div>
	  	<% end %> 
		<% end %>
	</div>
	<div class="col-md-1"></div>
</div>

<div class="row">
  <div class="center-block" style="width:50%">
  	<%= will_paginate if !@products.blank? %>
  </div>
</div>