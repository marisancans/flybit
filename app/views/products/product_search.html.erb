<%= stylesheet_link_tag "navbar" %>

<div class="row">
  <div class="center-block" style="width:50%">
  	<%= will_paginate if !@products.blank? %>
  </div>
</div>

<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-10">
		<% if @products.blank? %>
		  <h4>There are no products containing the term "<%= params[:search] %>"</h4>
		  <div style="width: 10%">
		  	<%= link_to "Browse shop", departments_path, class: "btn btn-primary btn-sm btn-block" %>
		  </div>
		<% else %>
			<h4>Found <%= @products.count %> products </h4>
			<div class="row">
		  	<%#= render @products %>
		  	<%= @categories.count %> 
		  </div>
		<% end %>
	</div>
	<div class="col-md-1"></div>
</div>

<div class="row">
  <div class="center-block" style="width:50%">
  	<%= will_paginate if !@products.blank? %>
  </div>
</div>