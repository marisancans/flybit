<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<div class="col-sm-6 col-lg-3 col-xs-12 col-md-4">
  <%= link_to product do %>
    <%= image_tag(product.attachments.first.image.url(:thumbnail)) %>

  <% end if product.attachments.exists?  %>
    <div class="row button-row">
      <div class="col-md-6 sharp pull-right">
        <%= button_to "Add to cart", line_items_path(product_id: product), remote: true, class: "btn btn-primary btn-lg sharp" %>
      </div>
      <div class="col-md-6 sharp pull-left">
        <%= button_to "More info", line_items_path(product_id: product), remote: true, class: "btn btn-primary btn-lg sharp" %>
      </div>
    </div>
  <div class"col-md-12">
    <p class="text-center title"><%= link_to product.title, product_path(product) %></p>
  </div>
  <div class="col-md-12">
    <h3 class="price text-center">â‚¬<b><%= product.price %></b> <h3>
  </div>
  <div class="col-md-12">
    <% if !product.product_attributes.empty? %>
      <div class="row">
      <table class="table table-hover table-responsive">
        <tbody>
          <% product.product_attributes.first(6).each do |attribute| %>
            <tr>
              <th scope="row"><%= attribute.title %></th>
              <td class="over-flow"><%= attribute.details %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
      </div>
    <% end %>
  </div>
</div>