<!-- Department and category list for navbar 
data aviable in seed files-->

<% departments = Department.all
	categories = Category.all %>

	User.includes(:addresses).where("addresses.country = ?", "Poland")


<% departments.each_with_index do |department, index| %>
  <li class="dropdown">
    <%= link_to "#{department.name}", categories_path(selected: "#{index + 1}") %>
    <ul class="dropdown-menu">
    	<% categories.where("department_id = ?", index + 1).each_with_index do |category, index| %>
    		<li><%= link_to "#{category.name}", category_path(index + 1) %></li>
    	<% end %>
    </ul>
  </li>
<% end %>