<div class="col-lg-3 col-md-4 col-xs-6 thumb">
  <div class="thumbnail">
    <%= link_to products_path(selected: "#{category.id}") do %>
      <%= image_tag category.image.url(:thumbnail) %>
      <div class="text-under-thumbnail">
        <%= category.name %>
      </div>
    <% end %>
  </div>
</div>