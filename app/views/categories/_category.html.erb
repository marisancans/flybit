<% index = category_counter + 1 %>
<div class="col-lg-3 col-md-4 col-xs-6 thumb">
  <div class="thumbnail">
    <%= link_to products_path(selected: "#{index}") do %>
      <img class="img-responsive" src="http://placehold.it/400x300" alt="">
      <div class="text-under-thumbnail">
        <%= category.name %>
      </div>
    <% end %>
  </div>
</div>